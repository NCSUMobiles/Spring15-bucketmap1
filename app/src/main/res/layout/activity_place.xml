<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="edu.ncsu.csc.bucketlist.PlaceActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/place_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/place_snippet"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stepSize="1.0"
        android:numStars="5"
        style="@style/customRatingBar"
        android:id="@+id/place_rating"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/place_comment"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/place_comment_edit"/>

    <Button
        android:id="@+id/goto_map_button"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="View this place on the map"
        android:onClick="viewOnMap"/>

    <Button
        android:id="@+id/share_place_button"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Share this place!"/>

    <Button
        android:id="@+id/share_image_button"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Share this place with a picture!"/>


</LinearLayout>
