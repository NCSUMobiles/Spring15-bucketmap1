<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.ncsu.csc.bucketlist.newBucket">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/ShowIconPanel">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Bucket Name:"
                android:id="@+id/textView2"
                android:layout_gravity="left|top" />

            <EditText
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText"
                android:layout_gravity="right" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Bucket"
                android:id="@+id/button"
                android:layout_gravity="right|center_vertical"
                android:onClick="CreateButtonClick"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:id="@+id/selectedImageView"
                android:layout_gravity="left|center_vertical" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_weight="0.52">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:columnCount="3"
                android:rowCount="3"
                android:layout_alignParentBottom="true">


                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/art"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:src="@drawable/art"
                    android:onClick="showBucketImage"
                    android:tag="art"/>



                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/entertainment"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:src="@drawable/entertainment"
                    android:onClick="showBucketImage"
                    android:tag="entertainment"/>

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/food"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:src="@drawable/food"
                    android:onClick="showBucketImage"
                    android:tag="food"/>

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/kid"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:src="@drawable/kid"
                    android:onClick="showBucketImage"
                    android:tag="kid"/>

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/parks"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:src="@drawable/parks"
                    android:onClick="showBucketImage"
                    android:tag="parks"/>

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/shopping"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:src="@drawable/shopping"
                    android:onClick="showBucketImage"
                    android:tag="shopping"/>

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/sports"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:src="@drawable/sports"
                    android:onClick="showBucketImage"
                    android:tag="sports"/>

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/standard"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:src="@drawable/standard"
                    android:onClick="showBucketImage"
                    android:tag="standard"/>

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/paint"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:src="@drawable/paint"
                    android:onClick="showBucketImage"
                    android:tag="paint"/>
            </GridLayout>


        </FrameLayout>
    </LinearLayout>

</RelativeLayout>
